<div class="pure-menu pure-menu-horizontal">
    <ul class="pure-menu-list">
        <li class="pure-menu-item"><a href="/tutors" class="pure-menu-link">Home</a></li>
        <li class="pure-menu-item"><a href="/message" class="pure-menu-link">Messages</a></li>
        <li class="pure-menu-item"><a href="/" class="pure-menu-link">Log Out</a></li>
    </ul>
</div>

<span>
<h1> {{person.name}} </h1>
<h3> {{person.school}}, {{person.classYear}} </h3>
</span>

<span id='profile'>
<p> <h4>Location</h4> {{person.zipcode}}</p>
<p> <h4>GPA</h4> {{person.gpa}}</p>
<p> <h4>Expected Compensation</h4> ${{person.compensation}} an hour</p>
<p> <h4>About Me</h4> {{person.aboutMe}} </p>
</span>

<span id='profile'>
	<h2> Classes </h2>
	<ul>
	{{#each classes}}
		{{#each this}}
			<li><h4>{{className}}  </h4> with {{professor}}, {{semesterTaken}} ({{grade}})</li>
		{{/each}}
	{{/each}}
	</ul>
</span>

<span id='profile'>
	<h2>Availability</h2>
	<ul>
		{{#each availability}}
			<li><h4>{{@key}}  </h4> {{#each this}} {{start}} - {{end}} {{/each}} </li>
		{{/each}}
	</ul>
</span>

<form action='' method='get'>
	<center><button type='button' id='messageBtn' class="pure-button" onclick='document.location.href="/message/{{person.username}}"'>Chat</button><center>
</form>
