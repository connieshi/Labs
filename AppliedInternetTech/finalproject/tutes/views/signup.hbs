<script src='javascripts/signup.js'></script> 

<h1>Sign Up for Tutes</h1>

<center>
<ul id='errors'>
	<p>{{signupError}}</p>
</ul>

<form method='post' action='' class="pure-form pure-form-stacked">
	<fieldset>
		<input type='text' id='username' name='username' placeholder='Username' required>   
		<input type='password' name='password' placeholder='Password' required>
		<label for='isTutor' class='pure-checkbox'>
			<input type='checkbox' id='isTutor' name='tutor' value='true' 
				onload='populateTutorFields()' onclick='populateTutorFields()'> I am a tutor. 
		</label>
	</fieldset>

	<fieldset>
		<input type='text' id='name' name='name' placeholder='Full Name' required>   
		<input type='text' id='zipcode' name='zipcode' placeholder='Zip Code' required>   
		<input list='schools' id='school' name='school' placeholder='Education' required>
		<datalist id='schools'>
			<option value='New York University'>
			<option value='Columbia University'>
			<option value='Barnard University'>
			<option value='Baruch University'>
			<option value='Hunter College'>
		</datalist>   

		<select id='classYear' class='pure-input-1-4' name='classYear' placeholder='Class Year' required>
			<option value='Freshman'>Freshman</option>
			<option value='Sophomore'>Sophomore</option>
			<option value='Junior'>Junior</option>
			<option value='Senior'>Senior</option>
			<option value='Master'>Master's</option>
			<option value='Ph.D.'>Ph.D.</option>
			<option value='Professional'>Professional</option>
		</select>
	<fieldset>

	<textarea class='pure-input-2-3' name='aboutme' id='aboutme' rows='5' cols='30' placeholder='Tell us about yourself' required></textarea>   

	<div id='tutorFields' class='hiddenElements'>
		<h1> Tutor Information </h1>
		<input type='number' step='any' id='gpa' name='gpa' placeholder='GPA'>  
		<input type='number' step='any' id='compensation' name='compensation' placeholder='Compensation'>
		
		<div id='classes' class='classes'>
			<h1> Classes </h1>

			<div class='pure-group'>
				<fieldset>
					<input type='text' id='aClass' name='aClass' placeholder='Class Name'>
					<input type='text' id='professor' name='professor' placeholder='Professor'>
					<input type='text' id='semester' name='semester' placeholder='Semester'>
					<select id='grade' name="grade" placeholder='Grade'>
						<option value="A+">A+</option>
						<option value="A">A</option>
						<option value="A-">A-</option>
						<option value="B+">B+</option>
						<option value="B">B</option>
						<option value="B-">B-</option>
						<option value="C+">C+</option>
						<option value="C">C</option>
						<option value="C-">C-</option>
						<option value="D+">D+</option>
						<option value="D">D</option>
						<option value="D-">D-</option>
						<option value="F">F</option>
					</select>
				</fieldset>
			</div>
		</div>

		<div class='buttons' class='hiddenElements'>
			<button type='button' id='addClass' name='addClass' 
				class='pure-button' onclick='addAnotherClass()'>Add Class</button>
			<button type='button' id='removeClass' name='removeClass' value='Remove class' 
				class='pure-button' onclick='removeLastClass()'>Remove Class</button>
		</div>

		<h1> Availability </h1>
		<div id='schedule' class='schedule pure-form pure-g'>
			<div class='pure-u-1-4'>
				<label>Monday</label>
				<input type='number' class='time' name='mondayStart' min='1' max='24' placeholder='From'> 
				<input type='number' class='time' name='mondayEnd' min='1' max='24' placeholder='To'>  
			</div>

			<div class='pure-u-1-4'>
				<label>Tuesday</label>
				<input type='number' class='time' name='tuesdayStart' min='1' max='24' placeholder='From'> 
				<input type='number' class='time' name='tuesdayEnd' min='1' max='24' placeholder='To'>  
			</div>
			
			<div class='pure-u-1-4'>
				<label>Wednesday</label>
				<input type='number' class='time' name='wednesdayStart' min='1' max='24' placeholder='From'> 
				<input type='number' class='time' name='wednesdayEnd' min='1' max='24' placeholder='To'>  
			</div>

			<div class='pure-u-1-4'>
				<label>Thursday</label>
				<input type='number' class='time' name='thursdayStart' min='1' max='24' placeholder='From'> 
				<input type='number' class='time' name='thursdayEnd' min='1' max='24' placeholder='To'>  
			</div>

			<div class='pure-u-1-3'>
				<label>Friday</label>
				<input type='number' class='time' name='fridayStart' min='1' max='24' placeholder='From'> 
				<input type='number' class='time' name='fridayEnd' min='1' max='24' placeholder='To'>  
			</div>

			<div class='pure-u-1-3'>
				<label>Saturday</label>
				<input type='number' class='time' name='saturdayStart' min='1' max='24' placeholder='From'> 
				<input type='number' class='time' name='saturdayEnd' min='1' max='24' placeholder='To'>  
			</div>

			<div class='pure-u-1-3'>
				<label>Sunday</label>
				<input type='number' class='time' name='sundayStart' min='1' max='24' placeholder='From'> 
				<input type='number' class='time' name='sundayEnd' min='1' max='24' placeholder='To'>  
			</div>
		</div>
	</div>
	<button type='submit' class='pure-button' onclick='return validateFields()'>Sign Up</button>
</form>
</center>
