<div class="pure-menu pure-menu-horizontal">
    <ul class="pure-menu-list">
        <li class="pure-menu-item"><a href="/tutors" class="pure-menu-link">Home</a></li>
        <li class="pure-menu-item"><a href="/message" class="pure-menu-link">Messages</a></li>
        <li class="pure-menu-item"><a href="/" class="pure-menu-link">Log Out</a></li>
    </ul>
</div>

<div>
<form method='post' action='' class='pure-form'>
	<fieldset>
		<input type='text' class='pure-input-rounded' id='message' name='message'>
		<button class='pure-button' type='submit' name='chat'>Send</button>
	</fieldset>
	<input type='hidden' id='hidden' name='{{currentUser}}'>
</form>
</div>

<span id='allMessages'>
{{#each message}}
	{{#if sent}}
		<li class='sent'>{{this.message}}</li>
	{{else}}
		<li class='received'>{{this.message}}</li>
	{{/if}}
{{/each}}
